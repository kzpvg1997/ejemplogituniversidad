<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="jpa_pu">
	<class>co.edu.eam.disenosoft.universidad.modelo.Asignatura</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Curso</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Docente</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Estudiante</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Evaluacion</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Falla</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Nota</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Persona</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.Profesion</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.RegistroCurso</class>
	<class>co.edu.eam.disenosoft.universidad.modelo.SesionCurso</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="1234" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/universidad" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="none" />
		</properties>

	</persistence-unit>
</persistence>